{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./.tmp/transpiled",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "files": [
      "./src/plugins/index.ts"
  ],

  "angularCompilerOptions": {
   "genDir": "./.tmp/aot",
   "skipMetadataEmit" : true
 }
}
